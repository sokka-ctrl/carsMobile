<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.carsmobile.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_detailCar"
            app:destination="@id/detailCar"/>

    </fragment>

    <fragment
        android:id="@+id/detailCar"
        android:name="com.example.carsmobile.DetailCar"
        android:label="DetailCar"
        tools:layout="@layout/fragment_detail_car">

        <argument
            android:name="model"
            app:argType="com.example.carsmobile.CarsModel"
            app:nullable="true"/>

    </fragment>

</navigation>